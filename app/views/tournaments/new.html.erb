<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <div class="form-body p-4">
        <h2>New</h2>

        <%= form_with model: @tournament, local:true do |t| %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-book"></i></span>
            </div>
            <%= t.text_field :name, class:"form-control", placeholder:"name" %>
          </div>
          <%= t.date_field :dates, class:"form-control" %>
          <hr>
          <%= t.submit 'Add', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>